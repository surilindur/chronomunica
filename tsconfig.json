{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "engines/*/bin/*.ts",
    "engines/*/lib/*.ts",
    "packages/*/bin/*.ts",
    "packages/*/lib/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
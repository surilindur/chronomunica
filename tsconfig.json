{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "declaration": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "bin/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}
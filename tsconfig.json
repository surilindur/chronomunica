{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/*.ts",
    "bin/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}